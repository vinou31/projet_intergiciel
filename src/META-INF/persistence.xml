<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
          http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
        
        	
        
        <persistence-unit name="cours" transaction-type="JTA">
        	        		
                <provider>org.hibernate.ejb.HibernatePersistence</provider>
                <jta-data-source>java:/jboss/datasources/ExampleDS</jta-data-source>
                
               <class>intergiciel.Article</class>
               <class>intergiciel.Avis</class>
               <class>intergiciel.AvisArticle</class>
               <class>intergiciel.AvisMembre</class>
               <class>intergiciel.Membre</class>
               <class>intergiciel.Troc</class>

                
                <properties>
                		<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
                        <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
                        <property name="hibernate.show_sql" value="true"/>
                </properties>

        </persistence-unit>
        
        
</persistence>

